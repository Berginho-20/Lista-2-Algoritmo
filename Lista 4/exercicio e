#include <stdio.h>

int main(void) {
  int num, res1, res2, res3, div1, div2;
  printf("Escreva um número com 3 digitos\n");
  scanf("%i", &num);
  if (99 < num && num <= 999){
    div1 = num/100;
    res1 = num %100;
    div2 = res1/10;
    res3 = res1%10;
    printf("CENTENA = %i, DEZENA = %i e UNIDADE = %i", div1, div2, res3);
  }
  else 
    printf("O número é inválido!");
  return 0;
}
